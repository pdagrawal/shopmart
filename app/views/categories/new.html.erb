<hr/>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="container">
  <h3>Available Categories</h3>
  <table border="1">
    <% @categories.each do |c| %>
      <tr>
    	  <td><%= c.category %></td>
        <td><%= link_to 'Remove', category_path(c),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        </td>
    	</tr>       
    <% end %>
  </table>
  <br/>

  <%= form_for @category do |f| %>
  	<div class="field">
      <%= f.label :Add_category %><br />
      <%= f.text_field :category, autofocus: true, autocomplete: "off" %>
    </div>
    <div class="action">
      <%= f.submit %>
    </div>
  <% end %><br/>
  <div><%= link_to "Back", products_path %></div>
</div>