<h1>Shopmart</h1><hr/>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<h3>Available Categories</h3>
<table border="1">
<% @categories.each do |c| %>
  <tr>
	  <td><%= c.category %></td>
	</tr>       

<% end %>
</table>
<br/>

<%= form_for @category do |f| %>
	<div class="field">
    <%= f.label :Add_category %><br />
    <%= f.text_field :category, autofocus: true, autocomplete: "off" %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %><br/>
<div><%= link_to "Back", products_path %></div>