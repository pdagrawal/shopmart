<div class="container">
  <h2>Categories List</h2><br/>
  <table class="table table-hover" border="1">
    <thead>
      <tr>
        <th>Categories</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |c| %>
        <tr>
          <td><%= c.category_name %></td>
          <td><%= link_to 'Remove', admin_category_path(c),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>       
      <% end %>
    </tbody>
  </table><br/>
  <a href="/" class="btn btn-primary" role="button">Back</a>
</div>