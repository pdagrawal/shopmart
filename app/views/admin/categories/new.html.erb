<div class="container">
  <%= form_for @category, url: admin_categories_path do |f| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@category.errors.count, "error") %> prohibited this user from being saved:
        </h2>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :Add_category %><br />
      <%= f.text_field :category_name, autofocus: true, autocomplete: "off" %>
    </div>
    <div class="action">
      <%= f.submit %>
    </div>
  <% end %><br/>
  <%= button_to "Back", admin_categories_path, :method => :get %><br/>
</div>