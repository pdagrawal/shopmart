<%= form_for @product, :url => (@product.new_record? ? admin_products_path : admin_product_path(@product)) do |f| %>

  <% if @product %>
    <%= render "common/error_messages", :target => @product %>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
  </div><br/>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price, autocomplete: "off" %>
  </div><br/>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, autocomplete: "off" %>
  </div><br/>

  <% if @product.new_record? %>
    <div class="field">
      <%= f.label :category %><br />
      <%= f.select :category, options_from_collection_for_select(@categories, "id", "category_name") %>
    </div><br/>
  <% end %>

  <div class="action">
    <%= f.submit %>
  </div><br/>
<% end %>