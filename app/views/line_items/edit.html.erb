<p>
	<strong>Name:</strong>
	<%= @line_item.product.name %>
</p>

<p>
	<strong>Price:</strong>
	<%= @line_item.product.price %>
</p>

<p>
	<strong>Current Quantity:</strong>
	<%= @line_item.quantity %>
</p>

<%= form_for @line_item do |f| %>
  <div class="field">
    <%= f.label :Quantity %><br />
    <%= f.text_field :quantity, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
