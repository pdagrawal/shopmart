<h3>Edit the quantity of Item</h3>
<p>
	<strong>Name:</strong>
	<%= @line_item.product.name %>
</p>

<p>
	<strong>Price:</strong>
	<%= @line_item.product.price %>
</p>

<p>
	<strong>Current Quantity:</strong>
	<%= @line_item.quantity %>
</p>

<%= form_for @line_item do |f| %>
  <% if @line_item.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@line_item.errors.count, "error") %> prohibited this user from being saved:
      </h2>
      <ul>
        <% @line_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :Quantity %><br />
    <%= f.text_field :quantity, autofocus: true, autocomplete: "off" %><br/>
    <span id = "quantity_error"></span>
  </div><br/>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %><br/>
<%= link_to 'Back', cart_path %>
