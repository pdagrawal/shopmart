<div class="container">
  <h2>Orders List</h2><br/>
  <table id="order_table" class="table table-hover" border="1">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Order Address</th>
        <th>Order Total</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr class = "clickable_row" data-link="<%= order_path(order.id) %>">
          <td><%= order.id %></td>
          <td><%= order.address %></td>
          <td><%= order.total %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br/>
  <a href="/" class="btn btn-primary" role="button">Back</a>
</div>