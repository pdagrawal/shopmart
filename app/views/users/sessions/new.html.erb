<ul class="nav nav-pills">
  <li role="presentation"><%= link_to "Home", root_path %></li>
  <li role="presentation" class="active"><%= link_to "Login", new_user_session_path %></li>
  <li role="presentation"><%= link_to "Signup", new_user_registration_path %></li>
  <li role="presentation"><%= link_to "About Us", about_us_path %></li>
  <li role="presentation"><%= link_to "Contact Us", contact_us_path %></li>
</ul>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="sr-only"><%= f.label :email %></div>
    <div>
      <%= f.email_field :email, :placeholder => "Email", autofocus: true %>
    </div>
    <div class="sr-only"><%= f.label :password %></div>
    <div>
      <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
      </div>
        <%= f.label :remember_me %>
      
    <% end -%>

    <div>
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>
<script src="Signin_files/ie10-viewport-bug-workaround.js"></script>
<br/>
<%= render "users/shared/links" %>
</div>
