<%= javascript_include_tag "login_form_validation" => true %>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="container">
  <div class="card card-container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="sr-only"><%= f.label :email %></div>
    <div>
      <%= f.email_field :email, :placeholder => "Email" %>
    </div>
    <span id="email_error"></span>
    <div class="sr-only"><%= f.label :password %></div>
    <div>
      <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
    </div>
    <span id="password_error"></span><br/>

    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      
    <% end -%>

    <div>
      <input type="submit" id="login" class="btn btn-lg btn-primary btn-block btn-signin" value="Log in" name="commit">
    </div>
  <% end %>
  </div>
</div>
<script src="Signin_files/ie10-viewport-bug-workaround.js"></script>
<br/>
<%= render "users/shared/links" %>
</div>
