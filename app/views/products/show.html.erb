<hr/>
<div class="container">
	<% if session['admin'] %>
		<p><h3><%= @product.category.category %>s</h3></p>
		<p>
			<strong>Name:</strong>
			<%= @product.name %>
		</p>
		<p>
			<strong>Price:</strong>
			<%= @product.price %>
		</p>
		<p>
			<strong>Description:</strong>
			<%= @product.description %>
		</p>
		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %>
	<% else %>
		<p><h3><%= @product.category.category %>s</h3></p>
		<p>
			<strong>Name:</strong>
			<%= @product.name %>
		</p>
		<p>
			<strong>Price:</strong>
			<%= @product.price %>
		</p>
		<p>
			<strong>Description:</strong>
			<%= @product.description %>
		</p>
		<%= button_to "Add to Cart", add_to_cart_path(:product_id => @product), :method => :post %><br/>
		<%= link_to 'Back', category_path(@product.category(params[:id])) %>
	<% end %>
</div>