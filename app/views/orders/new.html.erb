<div class="container">
  <h2>Enter Delivery Address</h2>
  <%= form_for @order do |f| %>
  <% if @order.errors %>
    <%= render "common/error_messages", :target => @order %>
  <% end %>
    <div class="field">
      <%= f.label :Address %><br />
      <%= f.text_area :address, autofocus: true %>
    </div>
    <div class="action">
      <%= f.submit %>
    </div>
  <% end %>
</div>