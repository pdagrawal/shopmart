<div class="container">
  <h2>Orders List</h2><br/>
  <table class="table table-hover" border="1">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Order Address</th>
        <th>Order Total</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.address %></td>
          <td><%= order.id %></td>
        </tr>       
      <% end %>
    </tbody>
  </table><br/>
  <%= button_to "Back", root_path, :method => :get %>
</div>